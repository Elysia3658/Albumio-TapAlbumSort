<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout"
    android:layout_width="71dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_marginTop="8dp"
    tools:background="@color/card_color">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:tint="@color/card_word_color"
        app:srcCompat="@drawable/vertical_align_bottom_24px"/>

    <TextView
        android:id="@+id/name_album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="1.5dp"
        android:layout_marginTop="2dp"
        android:maxLines="2"
        android:textAlignment="center"
        android:textColor="@color/card_word_color"
        android:textSize="11sp"
        tools:text="测试文本"/>


</LinearLayout>